{
    "appId": "com.wemd.app",
    "productName": "WeMD",
    "directories": {
        "output": "dist"
    },
    "files": [
        "main.js",
        "preload.js",
        "assets/**/*"
    ],
    "extraResources": [
        {
            "from": "../web/dist",
            "to": "web-dist",
            "filter": [
                "**/*"
            ]
        }
    ],
    "mac": {
        "category": "public.app-category.productivity",
        "target": [
            {
                "target": "dmg",
                "arch": [
                    "x64",
                    "arm64"
                ]
            },
            {
                "target": "zip",
                "arch": [
                    "x64",
                    "arm64"
                ]
            }
        ],
        "icon": "assets/icon.icns"
    },
    "dmg": {
        "title": "WeMD ${version}",
        "backgroundColor": "#ffffff",
        "icon": "assets/icon.icns",
        "contents": [
            {
                "x": 130,
                "y": 150,
                "type": "file"
            },
            {
                "x": 410,
                "y": 150,
                "type": "link",
                "path": "/Applications"
            }
        ],
        "window": {
            "width": 540,
            "height": 380
        }
    },
    "win": {
        "target": [
            "nsis",
            "zip"
        ],
        "icon": "assets/icon.ico"
    },
    "linux": {
        "target": [
            "AppImage",
            "deb"
        ],
        "category": "Office",
        "icon": "assets/icon.png",
        "maintainer": "WeMD Team"
    }
}